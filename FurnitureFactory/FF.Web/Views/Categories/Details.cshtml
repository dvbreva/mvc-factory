@model FF.Data.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Category Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Category Products
        </dt>

        @if (Model.Products.Count > 0)
        {
            <ul>
                @foreach (var item in Model.Products)
                {
                    <li> @item.Name</li>
                }
            </ul>
        }
        else
        {
            <p>No products have been added to this category so far.</p>
        }


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
